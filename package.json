{
  "name": "xrp402",
  "version": "0.1.0",
  "description": "x402 facilitator for XRPL - HTTP 402 payments on XRP Ledger",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:int": "vitest run test/integration",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "demo": "tsx examples/demo.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "hono": "^4.7.0",
    "xrpl": "^4.5.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.5.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ScavieFae/xrp402.git"
  },
  "license": "MIT",
  "keywords": [
    "x402",
    "xrpl",
    "xrp",
    "payments",
    "facilitator",
    "http-402"
  ]
}
